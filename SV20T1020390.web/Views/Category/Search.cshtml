@model SV20T1020390.web.Models.CategorySearchResult
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = null;
}

<!-- Hiển thị kết quả tìm kiếm -->
<div>
    <p style="margin: 10px 0 10px 0">
        Có <strong>@Model.RowCount</strong> nhà cung cấp trong số <strong>@Model.PageCount</strong> trang
    </p>
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr class="bg-primary">
                    <th>Tên loại</th>
                    <th>Mô tả</th>
                    <th style="width: 80px"></th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Data)
                {
                    <tr>
                        <td>@item.CategoryName</td>
                        <td>@item.Description</td>
                        <td class="text-right">
                            <a href="~/Category/Edit/@item.CategoryID" class="btn btn-xs btn-info">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="~/Category/Delete/@item.CategoryID" class="btn btn-xs btn-danger">
                                <i class="fa fa-remove"></i>
                            </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <div class="text-center">
        <ul class="pagination">
            @for (int p = 1; p <= Model.PageCount; p++)
            {
                if (Model.Page == p)
                {
                    <li class="active"><a href="#">@p</a></li>
                }
                else
                {
                    <li><a href="~/Category?page=@p&searchValue=@Model.SearchValue">@p</a></li>
                }
            }
        </ul>
    </div>
</div>
