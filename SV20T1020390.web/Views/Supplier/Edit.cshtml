@model SV20T1020390.DomainModels.Supplier
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Supplier/Save">
            @* <input type="hidden" name="@nameof(Model.SupplierID)" value="@Model.SupplierID" /> *@
            @Html.HiddenFor(m => m.SupplierID)
            <div class="form-group">
                <label>Tên nhà cung cấp:</label>
                @* <input type="text" class="form-control" name="@nameof(Model.SupplierName)" autofocus value="@Model.SupplierName"> *@
                @Html.TextBoxFor(m => m.SupplierName, new { @class = "form-control", @autofocus = "autofocus" })
                @Html.ValidationMessage(nameof(Model.SupplierName), new { @style = "color: #f00" })
            </div>

            <div class="form-group">
                <label>Tên giao dịch:</label>
                @* <input type="text" class="form-control" name="@nameof(Model.ContactName)" value="@Model.ContactName"> *@
                @Html.TextBoxFor(m => m.ContactName, new { @class = "form-control"})
                @Html.ValidationMessage(nameof(Model.ContactName), new { @style = "color: #f00" })
            </div>

            <div class="form-group">
                <label>Điện thoại:</label>
                @* <input type="text" class="form-control" name="@nameof(Model.Phone)" value="@Model.Phone"> *@
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control"})
                @Html.ValidationMessage(nameof(Model.Phone), new { @style = "color: #f00" })
            </div>

            <div class="form-group">
                <label>Email:</label>
                @* <input type="text" class="form-control" name="@nameof(Model.Email)" value="@Model.Email"> *@
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control",})
                @Html.ValidationMessage(nameof(Model.Email), new { @style = "color: #f00" })
            </div>

            <div class="form-group">
                <label>Địa chỉ:</label>
                @* <input type="text" class="form-control" name="@nameof(Model.Address)" value="@Model.Address"> *@
                @Html.TextBoxFor(m => m.Address, new { @class = "form-control",})
                @Html.ValidationMessage(nameof(Model.Address), new { @style = "color: #f00" })
            </div>

            <div class="form-group">
                <label>Tỉnh/Thành:</label>
                @* <select class="form-control" name="@nameof(Model.Province)">
                    @foreach (var item in SV20T1020390.BusinessLayers.CommonDataService.ListOfProvinces())
                    {
                        if (item.ProvinceName == Model.Province)
                        {
                            <option value="@item.ProvinceName" selected>@item.ProvinceName</option>
                        }
                        else
                        {
                            <option value="@item.ProvinceName">@item.ProvinceName</option>
                        }
                    }
                </select> *@
                @Html.DropDownListFor(m => m.Province, SelectListHelper.Provinces(), new { @class = "form-control" })
                @Html.ValidationMessage(nameof(Model.Province), new { @style = "color: #f00" })
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Supplier" class="btn btn-default">
                    Quay lại
                </a>
            </div>
            <div class="form-group">
                @Html.ValidationMessage("Error", new { @style = "color: #f00" })
            </div>
        </form>
    </div>
</div>
