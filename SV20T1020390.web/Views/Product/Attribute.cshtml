@model SV20T1020390.DomainModels.ProductAttribute
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" method="post" action="~/Product/SaveAttribute">
            @Html.HiddenFor(m => m.AttributeID)
            @Html.HiddenFor(m => m.ProductID)
            <div class="form-group">
                <label class="control-label col-sm-2">Tên thuộc tính:</label>
                <div class="col-sm-10">
                    @* <input type="text" class="form-control" name="AttributeName" /> *@
                    @Html.TextBoxFor(m => m.AttributeName, new { @class = "form-control" })
                    @Html.ValidationMessage(nameof(Model.AttributeName), new { @style = "color : #f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Giá trị thuộc tinh:</label>
                <div class="col-sm-10">
                    @* <input type="text" class="form-control" name="AttributeValue" /> *@
                    @Html.TextBoxFor(m => m.AttributeValue, new { @class = "form-control" })
                    @Html.ValidationMessage(nameof(Model.AttributeValue), new { @style = "color : #f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Thứ tự hiển thị:</label>
                <div class="col-sm-10">
                    @* <input type="text" class="form-control" name="DisplayOrder" /> *@
                    @Html.TextBoxFor(m => m.DisplayOrder, new { @class = "form-control indo" })
                    @Html.ValidationMessage(nameof(Model.DisplayOrder), new { @style = "color : #f00" })
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-floppy-o"></i>
                        Lưu dữ liệu
                    </button>
                    <a href="~/Product/Edit/@Model.ProductID" class="btn btn-default">
                        Quay lại
                    </a>
                </div>
            </div>
            <div class="form-group">
                @Html.ValidationMessage("Error", new { @style = "color: #f00" })
            </div>
        </form>

    </div>
</div>

@section scripts {
    <script>
        var inputDO = document.querySelector('.ipdo');
        inputDO.oninput = function () {
            if (inputDO.value == "") {
                inputDO.value = "0";
            }
        }
        inputDO.onkeypress = function () {
            inputDO.value = "";
        }
    </script>
}