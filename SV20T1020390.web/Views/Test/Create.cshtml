@model SV20T1020390.web.Models.Person
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Test/Save" method="post">
            @* <input type="hidden" name="@nameof(Model.CategoryID)" value="@Model.CategoryID" /> *@
            <div class="form-group">
                <label>Name:</label>
                <input type="text" class="form-control" name="@nameof(Model.Name)" autofocus value="@Model.Name">
            </div>

            <div class="form-group">
                <label>BirthDate:</label>
                <input type="hidden" name="@nameof(Model.BirthDate)" value="@Model.BirthDate">
                <input type="text" class="form-control date-picker" name="BirthDateInput"
                    value="@Model.BirthDate.ToString("dd/MM/yyyy", new System.Globalization.CultureInfo("en-GB"))">
            </div>

            <div class="form-group">
                <label>Salary:</label>
                <input type="text" class="form-control" name="@nameof(Model.Salary)" value="@Model.Salary">
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Category" class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

