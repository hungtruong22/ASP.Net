@model SV20T1020390.web.Models.ShipperSearchResult
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = null;
}

<div>
    @if(Model.RowCount > 0)
    {
        <p style="margin: 10px 0 10px 0">
            Có <strong>1.024</strong> người giao hàng trong số <strong>100</strong> trang
        </p>
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr class="bg-primary">
                        <th>Tên người giao hàng</th>
                        <th>Điện thoại</th>
                        <th style="width: 80px"></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Data)
                    {
                        <tr>
                            <td>@item.ShipperName</td>
                            <td>@item.Phone</td>
                            <td class="text-right">
                                <a href="~/Shipper/Edit/@item.ShipperID" class="btn btn-xs btn-info">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="~/Shipper/Delete/@item.ShipperID" class="btn btn-xs btn-danger">
                                    <i class="fa fa-remove"></i>
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
        <div class="text-center">
            <ul class="pagination">
                @for (int p = 1; p <= Model.PageCount; p++)
                {
                    if (Model.Page == p)
                    {
                        <li class="active"><a href="#">@p</a></li>
                    }
                    else
                    {
                        @* <li><a href="~/Shipper?page=@p&searchValue=@Model.SearchValue">@p</a></li> *@
                        <li><a href="javascript:;" onclick="doSearch('#formSearch', @p)">@p</a></li>
                    }
                }
            </ul>
        </div>
    }
    else
    {
        <div>
            <h3>Không tìm thấy người giao hàng cần tìm!</h3>
            <h4>Vui lòng thử lại.</h4>
        </div>
    }
</div>